prometheus.scrape "sonarr" {
  targets    = [{"__address__" = "host.docker.internal:9707"}]
  forward_to = [prometheus.remote_write.metrics_local_prometheus.receiver]
}

prometheus.scrape "radarr" {
  targets    = [{"__address__" = "host.docker.internal:9708"}]
  forward_to = [prometheus.remote_write.metrics_local_prometheus.receiver]
}

prometheus.remote_write "metrics_local_prometheus" {
   endpoint {
      name = "local-prometheus"
      url  = "http://prometheus:9090/api/v1/write"
   }
}
